---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import ProjectCard from "../components/ProjectCard.astro";
---

<!doctype html>
<html lang="fr">
<head>
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
	<style>
		body {
			font-family: 'Poppins', sans-serif;
		}
	</style>
</head>
<body class="m-0 p-0">
<main class=" w-screen max-w-full">
	<section class="relative h-screen flex items-center justify-center">
		<img
			src="/proyectos/RESIDENCIAL/2023-CASA-ENTRE-PINOS/1.jpg"
			alt="Arquitectura moderna"
			class="absolute inset-0 w-full h-full object-cover"
		/>
		<div class="relative z-10 text-center text-white">
			<img
				src="logo.png"
				alt="Logo de MAAM"
				class="w-[200px] h-[200px] mx-auto mb-4 object-contain"
			/>
			<h1 class="text-5xl md:text-7xl font-bold mb-4 text-gray-300 animate-fade-in">MAAM</h1>
			<p class="text-xl md:text-2xl text-gray-300 animate-fade-in-delay">Dise√±ando el futuro, hoy</p>
		</div>
		<div class="absolute inset-0 bg-black bg-opacity-50"></div>
	</section>
	<section class="m-20">
		<h2 class="text-4xl font-bold text-gray-900 mb-8">RESIDENCIAL</h2>
		<div class="grid grid-cols-1 md:grid-cols-4 gap-8 px-0">
			<ProjectCard
				image="/proyectos/RESIDENCIAL/2022-local/0-fachada.jpg"
				title="Vivienda unifamiliar"
				description="Hogares para toda la vida."
			/>

			<ProjectCard
				image="/proyectos/RESIDENCIAL/2022-local/0-fachada.jpg"
				title="Vivienda unifamiliar"
				description="Hogares para toda la vida."
			/>
			<ProjectCard
				image="/proyectos/RESIDENCIAL/2022-local/0-fachada.jpg"
				title="Vivienda unifamiliar"
				description="Hogares para toda la vida."
			/>
			<ProjectCard
				image="/proyectos/RESIDENCIAL/2022-local/0-fachada.jpg"
				title="Vivienda unifamiliar"
				description="Hogares para toda la vida."
			/>

		</div>
	</section>
	<section class="m-20">
		<h2 class="text-4xl font-bold text-gray-900 mb-8">TRANSPORTE</h2>
		<div class="grid grid-cols-1 md:grid-cols-4 gap-8 px-0">
			<ProjectCard
				image="/proyectos/RESIDENCIAL/2022-local/0-fachada.jpg"
				title="Vivienda unifamiliar"
				description="Hogares para toda la vida."
			/>

			<ProjectCard
				image="/proyectos/RESIDENCIAL/2022-local/0-fachada.jpg"
				title="Vivienda unifamiliar"
				description="Hogares para toda la vida."
			/>
			<ProjectCard
				image="/proyectos/RESIDENCIAL/2022-local/0-fachada.jpg"
				title="Vivienda unifamiliar"
				description="Hogares para toda la vida."
			/>
			<ProjectCard
				image="/proyectos/RESIDENCIAL/2022-local/0-fachada.jpg"
				title="Vivienda unifamiliar"
				description="Hogares para toda la vida."
			/>

		</div>
	</section>
</main>
<Footer />
</body>
</html>
